<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_result_item_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/background_result_wrong"> <TextView
    android:id="@+id/tv_result_question"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Q1. 문제 내용"
    android:textSize="16sp"
    android:textStyle="bold"
    android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tv_result_user_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• 나의 답: 2. 사용자가 고른 답"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tv_result_correct_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• 정답: 1. 이것이 정답"
        android:layout_marginTop="4dp"
        android:textColor="#D32F2F"
        android:textStyle="bold"/>
</LinearLayout>